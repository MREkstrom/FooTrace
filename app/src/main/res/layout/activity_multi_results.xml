<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textColor="#000000"
        android:textSize="48dp"
        android:id="@+id/Results" />

    <TextView
        android:text="Player 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/score_value"
        android:layout_alignBaseline="@+id/score_results_heading"
        android:layout_alignBottom="@+id/score_results_heading"
        android:layout_alignLeft="@+id/time_value"
        android:layout_alignStart="@+id/time_value" />

    <TextView
        android:text="Player 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/acurracy_value"
        android:layout_alignBaseline="@+id/accuracy_reults_heading"
        android:layout_alignBottom="@+id/accuracy_reults_heading"
        android:layout_alignLeft="@+id/time_value"
        android:layout_alignStart="@+id/time_value" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:id="@+id/reults_done_button"
        android:background="@drawable/beveledsquarebuttonstyle"
        android:layout_above="@+id/results_retry_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:id="@+id/results_retry_button"
        android:background="@drawable/beveledsquarebuttonstyle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/reults_done_button"
        android:layout_alignStart="@+id/reults_done_button"/>

    <TextView
        android:text="Player 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/time_value"
        android:layout_alignBaseline="@+id/time_results_heading"
        android:layout_alignBottom="@+id/time_results_heading"
        android:layout_alignLeft="@+id/Results"
        android:layout_alignStart="@+id/Results" />

    <TextView
        android:text="2nd: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accuracy_reults_heading"
        android:textSize="24dp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/score_value"
        android:layout_alignLeft="@+id/time_results_heading"
        android:layout_alignStart="@+id/time_results_heading" />

    <TextView
        android:text="1st: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_results_heading"
        android:textSize="24dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/accuracy_reults_heading"
        android:layout_toLeftOf="@+id/time_value"
        android:layout_toStartOf="@+id/time_value" />

    <TextView
        android:text="3rd: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/score_results_heading"
        android:layout_marginBottom="91dp"
        android:layout_above="@+id/reults_done_button"
        android:layout_alignRight="@+id/time_results_heading"
        android:layout_alignEnd="@+id/time_results_heading" />

    <TextView
        android:text="247"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/acurracy_value"
        android:layout_alignBottom="@+id/acurracy_value"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="231"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/score_value"
        android:layout_alignBottom="@+id/score_value"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="285"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/time_value"
        android:layout_alignBottom="@+id/time_value"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/time_results_heading"
        android:layout_toEndOf="@+id/time_results_heading"
        android:id="@+id/textView5" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="26dp"
        android:id="@+id/textView"
        android:layout_above="@+id/time_value"
        android:layout_toRightOf="@+id/Results"
        android:layout_toEndOf="@+id/Results" />
</RelativeLayout>