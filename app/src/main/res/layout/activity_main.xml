<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.footrace.MainActivity">

    <Button
        android:text="Multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/mpButton"
        android:onClick="onMainMenuButtonClick"
        android:background="@drawable/ovalbuttonstyle"/>

    <Button
        android:text="Draw!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/drawButton"
        android:onClick="onMainMenuButtonClick"
        android:background="@drawable/ovalbuttonstyle"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/settingsgear"
        android:id="@+id/settingsButton"
        android:background="@android:color/transparent"
        android:onClick="onMainMenuButtonClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleX=".75"
        android:scaleY=".75" />

    <Button
        android:text="Single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spButton"
        android:onClick="onMainMenuButtonClick"
        android:background="@drawable/ovalbuttonstyle"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/mpButton"
        android:layout_alignStart="@+id/mpButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/maintitle"
        android:id="@+id/imageView"
        android:scaleX="7"
        android:scaleY="7"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/spButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
