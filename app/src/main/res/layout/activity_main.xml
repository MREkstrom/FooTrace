<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.footrace.MainActivity">

    <Button
        android:text="Multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/mpButton"
        android:onClick="onMainMenuButtonClick"/>

    <Button
        android:text="Draw!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/drawButton"
        android:onClick="onMainMenuButtonClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/maintitle"
        android:id="@+id/imageView"
        android:scaleX="5"
        android:scaleY="5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <Button
        android:text="Single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/spButton"
        android:onClick="onMainMenuButtonClick"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/mpButton"
        android:layout_alignStart="@+id/mpButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:id="@+id/settingsButton"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/drawButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:onClick="onMainMenuButtonClick" />

</RelativeLayout>
